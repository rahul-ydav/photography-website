<%- include('partials/header') %>

<div class = "container">
    <div class = "row">
        <h1>Edit : <%= campground.name %></h1>
        <div style = "width: 30%; margin: 20px auto;">
            <form action="/index/<%= campground._id %>?_method=PUT" method="POST">
            <div class = "form-group">
                    <input class = "form-control" type="text" name="camp[name]" value = "<%= campground.name %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type="text" name= "camp[image]" value = "<%= campground.image %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type="number" name= "camp[price]" value = "<%= campground.price %>">
                </div>
                <div class = "form-group">
					<input class = "form-control" type="text" name= "camp[description]" value = "<%= campground.description %>">
                </div>
                <div class = "form-group">
                    <input class = "btn btn-lg btn-success btn-block" type="submit">   
                </div>
            </form>
            <p><a href="/index">Go Back</a></p>
        </div>
    </div>
</div>


<%- include('partials/footer') %>
