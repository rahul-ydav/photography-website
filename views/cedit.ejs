<%- include('partials/header') %>

<div class = "container">
    <div class = "row">
        <h1>Edit Comment</h1>
        <div style = "width: 30%; margin: 20px auto;">
            <form action="/index/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
                <div class = "form-group">
                    <input class = "form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <!-- <div class = "form-group">
                    <input class = "form-control" type="text" name= "comment[author]" placeholder="author">
                </div> -->
                <div class = "form-group">
                    <input class = "btn btn-lg btn-success btn-block" type="submit">
                </div>
            </form>
            <p><a href="/index/<%= campground_id %>">Go Back</a></p>
        </div>
    </div>
</div>


<%- include('partials/footer') %>
