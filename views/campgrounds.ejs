<%- include ('partials/header') %>

<!-- <%= currentUser %> -->

<div class = "container">
    <header class = "jumbotron">
        <h1>Welcome to our store</h1>
        <p>We have taken allot of shots so that you can have a good background in your pc</p>
        <a class = "btn btn-success btn-large" href="/index/new">add new campGrounds</a>
    </header>
    
    <div class = "row">
        <% for(var i=0; i<campgrounds.length; i++){  %>    
            <div class = "col-md-3 col-sm-6">
                <div class = 'thumbnail'>
                    <img class="image-responsive" src='<%=campgrounds[i].image%>'>
                    <div class = "caption">
                        <h5><%=  campgrounds[i].name%></h5>
                    </div>
					<p>
						<a class="btn btn-primary" href="index/<%= campgrounds[i]._id %>">more info</a>
					</p>
               </div>
            </div>
            <% } %>
    </div>
</div>


<a href="/">go to home</a>

